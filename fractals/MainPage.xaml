<Page
    x:Class="VisualStudioFractals.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="Black"
    Loaded="OnLoaded"
    SizeChanged="OnSizeChanged">
    <Grid>
        <Image x:Name="Background" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"></Image>
        <TextBlock x:Name="Elapsed" Foreground="White" VerticalAlignment="Bottom" Margin="50 100">Elapsed: 0.00sec</TextBlock>
        <TextBlock x:Name="Color"   Foreground="White" VerticalAlignment="Bottom" Margin="50 75">[C] Color: 0.00</TextBlock>
        <TextBlock x:Name="Motion"  Foreground="White" VerticalAlignment="Bottom" Margin="50 50">[M] Motion: 0.00</TextBlock>
    </Grid>
</Page>